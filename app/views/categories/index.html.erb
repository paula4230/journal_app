<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.title, category %></td>
        <td><%= link_to 'View Tasks', category_tasks_path(category) %></td>
        <td><%= link_to 'Edit', edit_category_path(category.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

