<p id="notice"><%= notice %></p>

<h1>tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category.tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.details %></td>
        <td><%= task.due %></td>
        <td><%= link_to 'Show', category_task_path(@category, task) %></td>
        <td><%= link_to 'Edit', edit_category_task_path(@category, task) %></td>
        <td><%= link_to 'Destroy', category_task_path(@category, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <td><%= link_to 'Add Task', new_category_task_path(@category, @task) %></td> 
  </tbody>
</table>

<br>


