<%= form_with scope: :task, model: [@category, @task], local:true do |f|%>

  <% if task.errors.any? %>
  
    <div id="error_explanation">
    <ul>
      <% task.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>

    <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>

    <div class="field">
        <%= f.label :details %>
        <%= f.text_area :details %>
    </div>

    <div class="field">
        <%= f.label :due %>
        <%= f.date_field :due %>
    </div>

    <div class="field">
        <%= f.label :user_id %>
        <%= f.number_field :user_id, id: :category_user_id, value: current_user.id %>
    </div>

    <div class="actions">
        <%= f.submit %>
    </div>

<% end %>