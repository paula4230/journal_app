
<div class="root-path">

  <div class="board">
    <div id="board-title">
      <h1 class="dashboard">DASHBOARD</h1>
    </div>    
  
  <div class= "task-button">
      <%= link_to 'Add Category', new_category_path, class:"add-category" %>
  </div>
  </div>

  <div class= "table-container">
  <table class="category-container">
  <tbody class="category_details">
    <% @categories.each do |category| %>
      <tr class="each_category">
        <td class="ct-options">
        <%= link_to image_tag('edit.png'),edit_category_path(category), id:"edit" %>
        <%# <td><%= link_to 'View Tasks', category_tasks_path(category)%> 
          <%= link_to image_tag('delete.png'),category_path(category), method: :delete, data: { confirm: 'Are you sure?' }%> 
        <%# <td><%= link_to 'Add Task', new_category_task_path(category) %>
        </td>
      <td class="category-holder"><%= link_to category.title, category_tasks_path(category), id:"category-name"%></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  </div>


<br>

</div>
  


